<div class="c-panel group">
  <%= image_tag 'instagram.svg', class: "c-panel__img" %> 

  <div class="c-panel__form">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.text_field :login, autofocus: true, class: "c-panel__input", placeholder: "Email or Username" %>

      <%= f.password_field :password,class: "c-panel__input", placeholder: "Password" %>

      <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %> 
      <% end %>

      <%= f.submit "Log in", class: "c-btn"%>

    <% end %>

    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "c-panel__forgot" %></a>
    <span class="c-panel__span">OR</span>
  </div>

  <a href="#" class="c-panel__facebook"><%= image_tag 'facebook.svg' %>&nbsp; Login with Facebook</a>
</div>
<div class="c-signup group">
  <p>Don't have an account? <span><%= link_to "Sign up", new_registration_path(resource_name) %></span></p>
</div>
<div class="c-app">
  <p>Get the app.</p>
  <div class="c-app__download">
    <%= image_tag 'apple.png' %>
    <%= image_tag 'google.png' %>
  </div>
</div>









