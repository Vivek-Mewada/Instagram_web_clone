<body>
  <div class="container">
    <div class="all-card">
      <% @posts.each do |post| %>
      <div class="card">
          <div class="top">
              <div class="userDeatils">
                  <div class="profileImg">
                      <%#= image_tag user_image_url(post.user), class: "cover" %>
                      <%= image_tag user_image_url(post.user.profile), class: "cover"%>
                  </div>
                   <h3><%= post.user[:username] %></h3>
              </div>
              <div class="dot">
                  <%= image_tag 'more.png', class: "heart" %>
              </div>
          </div>
          <div class="imgBg">
              <%= image_tag post.image, class: "cover" if post.image.attached? %>
          </div>
          <div class="btns">
              <div class="left">
                  <%= image_tag 'heart.svg', class: "heart" %>
                  <%= image_tag 'comment.svg', class: "heart" %>
                  <%= image_tag 'share.svg', class: "heart" %>
              </div>
              <div class="right">
                  <%= image_tag 'bookmark.svg', class: "heart" %>
              </div>
          </div>
          <h4 class="likes">5,489 likes</h4>
          <h4 class="message">
              <h3><%= post.user[:username] %></h3>
              <%= post.desc %>
              <br>
              <span>#ironman</span>
              <span>#captainamerica</span>
          </h4>
          <h4 class="comments">View all 546 comments</h4>
          <div class="addComments">
              <div class="userImg">
                 <%= image_tag user_image_url(post.user.profile), class: "cover"%>
              </div>
              <input type="text" class="text" placeholder="Add a comment...">
          </div>
          <h5 class="postTime">5 hours ago</h5>
      </div>
      <% end %>
